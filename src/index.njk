<section class="featured-posts">
  <h2>最新の投稿</h2>
  <ul>
    {%- for post in collections.post | reverse | limit(3) -%}
      <li>
        <a href="{{ post.url | url }}">{{ post.data.title }}</a>
        <span class="date">{{ post.date | dateFilter }}</span>
      </li>
    {%- endfor -%}
  </ul>
</section> 